<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@drawable/shape_setting_bg"
    android:paddingLeft="17.5dp"
    android:paddingRight="22dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="4dp"
    android:paddingTop="11dp"
    android:paddingBottom="11dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/mSetTitle"
        android:textSize="15sp"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:text="24小时制"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/mSetHint"
        android:visibility="gone"
        android:layout_toRightOf="@+id/mSetTitle"
        android:textColor="@color/white"
        android:layout_marginLeft="5dp"
        android:layout_alignBaseline="@+id/mSetTitle"
        android:text="(注：重设壁纸辅助锁屏时间展示）"
        android:textSize="8sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:src="@drawable/ic_round_arrow_forward_ios_24"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="20dp"
        android:layout_height="20dp"/>
</RelativeLayout>