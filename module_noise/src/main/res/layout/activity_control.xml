<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/bg_zixuan">
    <ImageView
        android:id="@+id/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="38.5dp"
        android:layout_marginTop="74dp"
        android:padding="5dp"
        android:src="@mipmap/ic_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/zixuan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/noiseName"
        android:layout_marginStart="28dp"
        android:text="@string/zixuan"
        android:textColor="#FFFFFF"
        android:textSize="44sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/noiseName"
        app:layout_constraintStart_toStartOf="@id/zixuan"
        app:layout_constraintBottom_toTopOf="@id/timingView"
        android:layout_marginBottom="31.5dp"
        android:textColor="#DEDEDE"
        android:textSize="16sp"
        tools:text="高教/猫叫/哇哇叫"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/volume"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/zixuan"
        app:layout_constraintHorizontal_bias="0.5547"
        android:src="@drawable/selector_volume"
        android:layout_width="33dp"
        android:layout_height="33dp"/>
    <ImageView
        android:id="@+id/mute"
        android:src="@drawable/selector_mute"
        app:layout_constraintStart_toEndOf="@id/volume"
        app:layout_constraintTop_toTopOf="@id/volume"
        android:layout_marginStart="20dp"
        android:layout_width="33dp"
        android:layout_height="33dp"/>
    <ImageView
        android:id="@+id/timing"
        android:src="@drawable/selector_timing"
        app:layout_constraintStart_toEndOf="@id/mute"
        app:layout_constraintTop_toTopOf="@id/volume"
        android:layout_marginStart="20dp"
        android:layout_width="33dp"
        android:layout_height="33dp"/>
<!--    选择定时关闭部分-->
    <LinearLayout
        android:id="@+id/timingView"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintStart_toStartOf="@id/zixuan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="102dp"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@android:color/white"/>
        <ViewSwitcher
            android:id="@+id/viewSwitcher"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/timingRecyclerView"
                android:layout_marginTop="31.5dp"
                android:layout_width="match_parent"
                android:layout_height="44dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/countdownTextView"
                    android:layout_marginStart="20dp"
                    tools:text="1:20:11"
                    android:layout_centerVertical="true"
                    android:textColor="#fff"
                    android:textSize="30sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/cancelCountdown"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="30dp"
                    android:textColor="#fff"
                    android:textSize="25sp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:background="@drawable/shape_button_white_bg"
                    android:text="@string/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </ViewSwitcher>

    </LinearLayout>
    <!--    进度条部分-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalStart"
        app:layout_constraintGuide_percent="0.1489"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalEnd"
        app:layout_constraintGuide_percent="0.88"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>
    <LinearLayout
        android:id="@+id/volumeProgress"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintStart_toStartOf="@id/verticalStart"
        app:layout_constraintEnd_toEndOf="@id/verticalEnd"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/volume1"
            android:visibility="invisible"
            tools:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/noiseName1"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="哇哇叫"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/seekBar1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/noiseName1"
                android:progressDrawable="@drawable/bg_adjust_seek_bar"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:maxHeight="3.4dp"
                android:minHeight="3.4dp"
                android:thumb="@drawable/seekbar_thumb_b"
                android:layout_marginTop="12dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/volume2"
            android:layout_marginTop="9dp"
            android:visibility="invisible"
            tools:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/noiseName2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="20dp"
                tools:text="哇哇叫"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/seekBar2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                app:layout_constraintTop_toBottomOf="@id/noiseName2"
                android:progressDrawable="@drawable/bg_adjust_seek_bar"
                android:maxHeight="3.4dp"
                android:minHeight="3.4dp"
                android:thumb="@drawable/seekbar_thumb_b"
                android:layout_marginTop="12dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/volume3"
            android:layout_marginTop="9dp"
            android:visibility="invisible"
            tools:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/noiseName3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="20dp"
                tools:text="哇哇叫"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/seekBar3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/noiseName3"
                android:progressDrawable="@drawable/bg_adjust_seek_bar"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:maxHeight="3.4dp"
                android:minHeight="3.4dp"
                android:thumb="@drawable/seekbar_thumb_b"
                android:layout_marginTop="12dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>