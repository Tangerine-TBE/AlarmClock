<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/iv_life_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/ultraviolet_ray"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_below="@+id/iv_life_icon"
                android:id="@+id/tv_life_title"
                android:text="紫外线"
                android:textColor="#999999"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_below="@+id/tv_life_title"
                android:id="@+id/tv_life_values"
                android:textSize="12sp"
                android:text="中等"
                android:layout_marginTop="8dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/color_rv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </RelativeLayout>
</layout>